<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Lists</h1>
    <a href="/admin/lists/add" class="btn btn-success">Add New List</a>
</div>

{{#if lists.length}}
    <div class="row">
        {{#each lists}}
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <div class="d-flex justify-content-between">
                            <a href="/lists/{{this.id}}" class="btn btn-primary">View Tasks</a>
                            <div>
                                <a href="/admin/lists/edit/{{this.id}}" class="btn btn-sm btn-warning">Edit</a>
                                <form action="/admin/lists/delete/{{this.id}}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="alert alert-info">No lists found. Create your first list!</div>
{{/if}}